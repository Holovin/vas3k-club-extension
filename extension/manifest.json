{
  "name": "Vas3k Club Extension",
  "description": "Расширение для джедаев, круглолицых Ванек и прочих хикканов Вастрик.Клуба",
  "homepage_url": "https://github.com/ganqqwerty/vas3k-club-extension",
  "version": "2.0.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Вастрик.Клуб",
    "default_icon": "logo-128.png"
  },
  "content_scripts": [
    {
      "run_at" : "document_start",
      "js": ["before.js"],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    },
    {
      "run_at" : "document_idle",
      "js": ["after.js"],
      "matches": [
        "https://vas3k.club*/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}
